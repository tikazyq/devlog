{
  "name": "devlog-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for development logging tools and MCP server",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "start": "pnpm --filter @devlog/mcp-server start",
    "dev": "pnpm --filter @devlog/mcp-server dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm --filter @devlog/mcp-server test -- --coverage",
    "test:integration": "pnpm --filter @devlog/mcp-server test:integration",
    "test:quick": "pnpm build:mcp && node scripts/quick-test.mjs",
    "clean": "pnpm -r clean",
    "install-all": "pnpm install",
    "build:mcp": "pnpm --filter @devlog/mcp-server build",
    "build:types": "pnpm --filter @devlog/types build",
    "build:core": "pnpm --filter @devlog/core build"
  },
  "keywords": [
    "monorepo",
    "mcp",
    "model-context-protocol",
    "devlog",
    "development-notes",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.9.0"
}
