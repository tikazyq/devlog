{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/server",
    "rootDir": "./src/server",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": false,
    "incremental": false
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
